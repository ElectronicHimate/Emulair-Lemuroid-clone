<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.EmulairMaterialYou" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_dark_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_dark_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_dark_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_dark_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_dark_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_dark_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_dark_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_dark_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_dark_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_dark_onTertiaryContainer</item>
        <item name="colorAccent">@color/md_theme_dark_secondary</item>
        <item name="colorError">@color/md_theme_dark_error</item>
        <item name="colorErrorContainer">@color/md_theme_dark_errorContainer</item>
        <item name="colorOnError">@color/md_theme_dark_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_dark_onErrorContainer</item>
        <item name="colorOnBackground">@color/md_theme_dark_onBackground</item>
        <item name="colorSurface">@color/md_theme_dark_surface</item>
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_dark_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_dark_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_dark_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_dark_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_dark_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_dark_primaryInverse</item>
        <!-- -->
        <item name="android:windowBackground">@color/md_theme_dark_background</item>
        <item name="android:colorBackground">@color/md_theme_dark_background</item>
        <item name="appBarLayoutStyle">@style/Theme.EmulairMaterialYou.AppBar</item>
        <item name="toolbarStyle">@style/Theme.EmulairMaterialYou.Toolbar</item>
        <item name="bottomNavigationStyle">@style/Theme.EmulairMaterialYou.BottomNav</item>
        <item name="materialCardViewStyle">@style/Theme.EmulairMaterialYou.CardView</item>
        <item name="materialSwitchStyle">@style/Theme.EmulairMaterialYou.Switch</item>
        <item name="linearProgressIndicatorStyle">@style/Theme.EmulairMaterialYou.LinearProgressIndicator</item>
        <item name="materialButtonStyle">@style/Theme.EmulairMaterialYou.Button</item>
        <item name="imageButtonStyle">@style/Theme.EmulairMaterialYou.ImageButton</item>
        <!-- <item name="">@style/Theme.EmulairMaterialYou.ToggleButton</item> -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.EmulairMaterialYou.Dialog</item>
        <item name="android:statusBarColor">@color/md_theme_dark_background</item>
        <item name="android:navigationBarColor">@color/md_theme_dark_background</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="android:textColor">@color/md_theme_dark_onSurface</item>
        <item name="android:fontFamily">@font/plus_jakarta_sans_medium</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
    </style>

    <!-- -->

    <!-- app bar -->
    <style name="Theme.EmulairMaterialYou.AppBar" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">@color/md_theme_dark_background</item>
    </style>

    <!-- toolbar -->
    <style name="Theme.EmulairMaterialYou.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.EmulairMaterialYou.Toolbar.TitleLarge</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.EmulairMaterialYou.Toolbar</item>
    </style>

    <style name="TextAppearance.EmulairMaterialYou.Toolbar.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/md_theme_dark_onSurface</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ThemeOverlay.EmulairMaterialYou.Toolbar" parent="">
        <!-- icons and other things: -->
        <item name="colorControlNormal">@color/md_theme_dark_onSurface</item>
    </style>

    <!-- bottom nav view -->
    <style name="Theme.EmulairMaterialYou.BottomNav" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/md_theme_dark_background</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.EmulairMaterialYou.BottomNav</item>
        <item name="itemActiveIndicatorStyle">@style/Theme.EmulairMaterialYou.BottomNav.ActiveIndicator</item>
    </style>

    <style name="ThemeOverlay.EmulairMaterialYou.BottomNav" parent="">
        <!-- icon & text inactive: -->
        <item name="colorOnSurfaceVariant">@color/md_theme_dark_onSurfaceVariant</item>
        <!-- icon active: -->
        <item name="colorOnSecondaryContainer">@color/md_theme_dark_onSecondaryContainer</item>
        <!-- text active: -->
        <item name="colorSurface">@color/md_theme_dark_surface</item>
    </style>

    <style name="Theme.EmulairMaterialYou.BottomNav.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/md_theme_dark_surfaceVariant</item>
    </style>

    <!-- card -->
    <style name="Theme.EmulairMaterialYou.CardView" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/md_theme_dark_surface</item>
    </style>

    <!-- switch -->
    <style name="Theme.EmulairMaterialYou.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.EmulairMaterialYou.Switch</item>
    </style>

    <style name="ThemeOverlay.EmulairMaterialYou.Switch" parent="">
        <!-- track inactive: -->
        <item name="colorOutline">@color/md_theme_dark_outline</item>
        <!-- track active: -->
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>
        <!-- thumb inactive: -->
        <item name="colorSurfaceVariant">@color/md_theme_dark_surfaceVariant</item>
        <!-- thumb active: -->
        <item name="colorPrimary">@color/md_theme_dark_secondary</item>
    </style>

    <!-- linear progress indicator -->
    <style name="Theme.EmulairMaterialYou.LinearProgressIndicator" parent="Widget.Material3.LinearProgressIndicator">
        <item name="materialThemeOverlay">@style/ThemeOverlay.EmulairMaterialYou.LinearProgressIndicator</item>
    </style>

    <style name="ThemeOverlay.EmulairMaterialYou.LinearProgressIndicator" parent="">
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
    </style>

    <!-- button -->
    <style name="Theme.EmulairMaterialYou.Button" parent="Widget.Material3.Button.TonalButton">
        <!-- background: -->
        <item name="backgroundTint">@color/md_theme_dark_secondaryContainer</item>
        <!-- text: -->
        <item name="android:textColor">@color/md_theme_dark_onSecondaryContainer</item>
        <!-- icon: -->
        <item name="iconTint">@color/md_theme_dark_onSecondaryContainer</item>
    </style>

    <!-- image button -->
    <style name="Theme.EmulairMaterialYou.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/md_theme_dark_onSurface</item>
    </style>

    <!-- toggle button -->
    <style name="Theme.EmulairMaterialYou.ToggleButton" parent="">
    </style>

    <!-- dialog -->
    <style name="ThemeOverlay.EmulairMaterialYou.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <!-- buttons: -->
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <!-- list buttons: -->
        <item name="colorControlNormal">@color/md_theme_dark_onSurface</item>
        <!-- icon: -->
        <item name="colorSecondary">@color/md_theme_dark_secondary</item>
        <!-- container: -->
        <item name="colorSurface">@color/md_theme_dark_surface</item>
        <!-- title text: -->
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>
        <!-- body text and items: -->
        <item name="colorOnSurfaceVariant">@color/md_theme_dark_onSurfaceVariant</item>
    </style>

    <!-- -->

    <style name="Theme.EmulairMaterialYou.Menu" parent="Theme.EmulairMaterialYou">
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowBackground">@color/pause_menu_background_color</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.EmulairMaterialYou.Game" parent="Theme.EmulairMaterialYou">
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="Theme.EmulairMaterialYou.Invisible" parent="Theme.EmulairMaterialYou">
        <item name="android:background">#00000000</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

