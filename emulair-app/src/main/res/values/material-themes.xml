        <item name="appBarLayoutStyle">@style/Theme.EmulairMaterialYouDark.AppBar</item>
        <item name="bottomNavigationStyle">@style/Theme.EmulairMaterialYouDark.BottomNav</item>
        <item name="materialCardViewStyle">@style/Theme.EmulairMaterialYouDark.CardView</item>
