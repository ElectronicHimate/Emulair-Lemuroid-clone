    <!-- ############################################### -->
    <!-- ################## Universal ################## -->
    <!-- ############################################### -->
    <!-- preference screen scrollbar -->
    <style name="ThemeOverlay.PreferenceScreen" parent="">
        <item name="preferenceFragmentCompatStyle">@style/Style.PreferenceScreen</item>
    </style>

    <style name="Style.PreferenceScreen" parent="">
        <item name="android:scrollbarStyle">@style/Shape.Scrollbar</item>
    </style>

    <style name="Shape.Scrollbar" parent="">
        <item name="android:scrollbarThumbVertical">@drawable/shape_scrollbar</item>
        <item name="android:scrollbarTrackVertical">@drawable/shape_scrollbar</item>
    </style>

    <!-- preference cards -->
    <style name="ShapeOverlay.CardView.Group.Top" parent="">
        <item name="cornerSizeTopLeft">@dimen/corner_radius</item>
        <item name="cornerSizeTopRight">@dimen/corner_radius</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ShapeOverlay.CardView.Group.Middle" parent="">
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ShapeOverlay.CardView.Group.Bottom" parent="">
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/corner_radius</item>
        <item name="cornerSizeBottomRight">@dimen/corner_radius</item>
    </style>

    <style name="ShapeOverlay.CardView.Block" parent="">
        <item name="cornerSizeTopLeft">@dimen/corner_radius</item>
        <item name="cornerSizeTopRight">@dimen/corner_radius</item>
        <item name="cornerSizeBottomRight">@dimen/corner_radius</item>
        <item name="cornerSizeBottomLeft">@dimen/corner_radius</item>
    </style>

    <!-- images -->
    <style name="ShapeOverlay.ImageView" parent="">
        <item name="cornerSize">@dimen/corner_radius</item>
    </style>


</resources>